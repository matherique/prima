{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "outDir": "./build/",
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "allowJs": false,
    "strictNullChecks": false,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "baseUrl": "src",
    "rootDir": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
